{
    "version": "1.1.0",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2017",
        "strict": true,
        "outDir": "./target",
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "lib": [
            "es2017"
        ],
        "pretty": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "incremental": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "GLib": ["types/glib"],
            "Gio": ["types/gio"],
            "Clutter": ["types/clutter"],
            "GObject": ["types/gobject"],
            "Cogl": ["types/cogl"],
            "Gdk": ["types/gdk"],
            "GnomeDesktop": ["src/types/gnome_desktop"],
            "Gtk": ["src/types/gtk"],
            "Shell": ["src/types/shell"],
            "Soup": ["types/soup"],
            "ui": ["src/types/ui"],
            "St": ["types/st"],
            "Meta": ["types/meta", "src/types/meta"],
            "Gjs": ["src/types/gjs"],
        },
        "experimentalDecorators": true
    },
    "include": [
        "extension.ts",
        // "prefs.js",
        "src/**/*.ts",
        "src/**/*.js"
, "shell.ts"    ]
}