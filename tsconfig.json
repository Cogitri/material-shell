{
    "version": "1.1.0",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2016",
        "strict": true,
        "outDir": "./target",
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "lib": [
            "es2016"
        ],
        "pretty": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "incremental": true,
        "noImplicitAny": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "GLib": ["@types/Gjs/GLib-2.0"],
            "Gio": ["@types/Gjs/Gio-2.0"],
            "Clutter": ["@types/Gjs/Clutter-1.0"],
            "GObject": ["@types/Gjs/GObject-2.0"],
            "St": ["src/st"],
            "Meta": ["src/meta"],
        },
        "experimentalDecorators": true
    },
    "include": [
        "extension.ts",
        // "prefs.js",
        "src/**/*.ts",
        "src/**/*.js"
    ]
}